int ba2str(bdaddr_t *ba, char *str) {
    void *fptr;
    int retval;

    fptr = dlsym(_Chbluetooth_handle, "ba2str_chdl");
    if(fptr == NULL) {
        fprintf(_stderr, "Error: %s(): dlsym(): %s\n", __func__,  dlerror());
        return -1;
    }
    dlrunfun(fptr, &retval, ba2str, ba, str);
    return retval;
}
